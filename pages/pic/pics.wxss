/* pages/pic/pics.wxss */
.pic-container {
  width: 100%;
  top: 0px;
  background-color: #F8F8FF;
}

.pic-header {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
  flex-direction: row;
  font-size: 32rpx;
  margin-bottom: 15rpx;
  background-color: white;
}

.choose-container {
  display: flex;
  flex-direction: row;
}

.choose-button {
  border-radius: 18rpx;
  background-color: #AEEEEE;
  padding: 15rpx; 
  color: white;
  font-size: 28rpx;
}

.choose-content {
  padding: 10rpx;
  color: #CD69C9;
}

.search-box {
  width: 100%;
  /* height: 80rpx;  */
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}